{
  "name": "local-translator",
  "version": "1.0.0",
  "description": "A modular translator using Ollama",
  "main": "./out/main/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "start": "electron-vite preview",
    "build:types": "tsc",
    "build:mac": "npm run build && electron-builder --mac",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "format": "prettier --write \"src/**/*.{ts,js,json}\""
  },
  "keywords": [
    "translator",
    "ollama",
    "electron"
  ],
  "author": "Local Translator",
  "license": "MIT",
  "build": {
    "appId": "com.localtranslator.app",
    "productName": "LocalTranslator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    }
  },
  "devDependencies": {
    "@types/node": "^20.19.30",
    "@vitest/ui": "^4.0.17",
    "electron": "^33.4.1",
    "electron-builder": "^26.4.0",
    "electron-vite": "^5.0.0",
    "prettier": "^3.8.1",
    "ts-node": "^10.9.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "eld": "^2.0.2",
    "electron-store": "^11.0.2"
  }
}
